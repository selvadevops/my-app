node{
   stage('SCM Checkout'){
     git 'https://github.com/selvadevops/my-app'
   }
   stage('Compile-Package'){
      // Get maven home path
     def mvnHome = tool name: 'maventamil', type: 'maven'   
     sh "${mvnHome}/bin/mvn package"
   }
   stage('Deploy to Tomcat'){
      
   sshagent(['tomcat-dev']) {
         sh 'scp -v-o StrictHostKeyChecking=no /home/tomcat/.jenkins/workspace/tomcat-deploy/target/myweb-0.0.5.war root@192.168.1.141:/opt/tomcat/apache-tomcat-8.5.43/webapps/'
      }
   }
    stage('Email Notification'){
    mail bcc: '', body: '''Hi,
    Welcome to Jenkins email alerts
    Thanks
    Tamil''', cc: 'selvamware@gmail.com', from: '', replyTo: '', subject: 'Jenkins job alerts - tamil', to: 'selvadevops@gmail.com'
   } 
   stage('Slack Notification'){
       slackSend baseUrl: 'https://hooks.slack.com/services/',
       channel: '#jenkins-pipeline-demo',
       color: 'good', 
       message: 'Welcome to Jenkins, Slack!', 
       teamDomain: 'javahomecloud',
       tokenCredentialId: 'slack-demo'
   }

}
